<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".controle.doencas.DoencaScrollingActivity">
    <!--tools:showIn="@layout/activity_doenca_scrolling"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:paddingTop="20dp">

        <!--agente-->
        <LinearLayout
            android:id="@+id/layout_agente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:tag="layout_agente">

            <LinearLayout
                android:id="@+id/barra_agente"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titulo_cards"
                android:gravity="center_vertical"
                android:onClick="abreParentLayout"
                android:padding="10dp"
                android:tag="barra_agente">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/icon_agente"
                    android:tint="#FFFFFF" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/titulo_agente"
                    android:textColor="@color/branco"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_agente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ihhnv_agente" />
        </LinearLayout>
        <!--sinais clinicos-->
        <LinearLayout
            android:id="@+id/layout_sinais"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:tag="layout_sinais">

            <LinearLayout
                android:id="@+id/barra_sinais"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titulo_cards"
                android:gravity="center_vertical"
                android:onClick="abreParentLayout"
                android:padding="10dp"
                android:tag="barra_sinais">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/icon_sinais"
                    android:tint="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/titulo_sinais"
                    android:textColor="@color/branco"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingTop="15dp"
                android:src="@drawable/icon_ihhnv"

                />

            <TextView
                android:id="@+id/text_sinais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:text="@string/ihhnv_sinais" />

        </LinearLayout>
        <!--imagens-->
        <LinearLayout
            android:id="@+id/layout_imagens"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:tag="layout_imagens">

            <LinearLayout
                android:id="@+id/barra_imagens"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titulo_cards"
                android:gravity="center_vertical"
                android:onClick="abreParentLayout"
                android:padding="10dp"
                android:tag="barra_imagens">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/titulo_imagens"
                    android:padding="5dp"
                    android:src="@drawable/icon_imagens"
                    android:tint="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/titulo_imagens"
                    android:textColor="@color/branco"
                    android:textSize="20sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imagem_doenca_0"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/descr_imagem"
                android:onClick="abreImagem"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imagem_doenca_1"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/descr_imagem"
                android:onClick="abreImagem"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imagem_doenca_2"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/descr_imagem"
                android:onClick="abreImagem"
                android:visibility="gone" />
        </LinearLayout>
        <!--prevencao-->
        <LinearLayout
            android:id="@+id/layout_prevencao"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:tag="layout_prevencao">

            <LinearLayout
                android:id="@+id/barra_prevencao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titulo_cards"
                android:gravity="center_vertical"
                android:onClick="abreParentLayout"
                android:padding="10dp"
                android:tag="barra_prevencao">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/titulo_prevencao"
                    android:padding="5dp"
                    android:src="@drawable/icon_prevencao"
                    android:tint="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/titulo_prevencao"
                    android:textColor="@color/branco"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_prevencao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/ihhnv_prevencao" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_saibamais"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:tag="layout_saibamais">

            <LinearLayout
                android:id="@+id/barra_saibamais"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/titulo_cards"
                android:gravity="center_vertical"
                android:onClick="abreParentLayout"
                android:padding="10dp"
                android:tag="barra_saibamais">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/titulo_saiba_mais"
                    android:padding="5dp"
                    android:src="@drawable/icon_web"
                    android:tint="@color/branco" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="@string/titulo_saiba_mais"
                    android:textColor="@color/branco"
                    android:textSize="20sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_saiba_mais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/text_saiba_mais_ihhnv" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="#cfd8dc"
                android:onClick="abrirLinkDaTag"
                android:tag="@string/link_ihhnv">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/logo_oie"
                    android:onClick="abrirLinkDaTag"
                    android:src="@drawable/icon_oie"
                    android:tag="@string/link_ihhnv" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:onClick="abrirLinkDaTag"
                    android:tag="@string/link_ihhnv"
                    android:text="@string/manual_oie"
                    android:textSize="17sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
