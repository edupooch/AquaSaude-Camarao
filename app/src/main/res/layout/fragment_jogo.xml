<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".controle.jogo.JogoActivity$PerguntaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_pergunta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#fff"
                    android:textSize="26sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:tag="layout_resposta_0"
                        android:id="@+id/layout_resposta_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/foto_resposta_0"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_padrao" />


                        <RadioButton
                            android:tag="radio0"
                            android:id="@+id/radio_resposta_0"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:textColor="#555"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:tag="layout_resposta_1"
                        android:id="@+id/layout_resposta_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/foto_resposta_1"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_padrao" />

                        <RadioButton
                            android:tag="radio1"
                            android:id="@+id/radio_resposta_1"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:textColor="#555"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:tag="layout_resposta_2"
                        android:id="@+id/layout_resposta_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/foto_resposta_2"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_padrao" />


                        <RadioButton
                            android:tag="radio2"
                            android:id="@+id/radio_resposta_2"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:textColor="#555"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:tag="layout_resposta_3"
                        android:id="@+id/layout_resposta_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/card"
                        android:orientation="vertical"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/foto_resposta_3"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foto_padrao" />

                        <RadioButton
                            android:tag="radio3"
                            android:id="@+id/radio_resposta_3"
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:textColor="#555"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/bt_responde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"

        android:background="@color/colorPrimaryDark"
        android:text="@string/confirmar"
        android:textColor="@color/branco" />

</LinearLayout>
