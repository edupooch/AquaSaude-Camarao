<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.gov.rs.fepagro.aquasaude.controle.ChecklistActivity"
    tools:showIn="@layout/activity_checklist">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/checklist_selecione"

            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="#666" />


        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="As Pós-Larvas/Larvas/Alevinos adquiridas são de alta qualidade e livres de patógenos em laboratórios confiáveis"
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Visita ao laboratório antes de adquirir as Pós-Larvas/Larvas/ Alevinos para checar a integridade dos animais"
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="A qualidade das Pós-Larvas/Larvas/Alevinos é avaliada na aquisição"
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Relizar cuidados com o transporte e recepção das Pós-Larvas/Larvas/Alevinos."
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="A água captada para o abastecimento dos berçários passa por uma filtração"
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="É realizada a limpeza dos berçários imediatamente após a despesca."
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="É realizada uma sanitização (aplicação de produtos químicos) dos tanques berçário por pessoas especializadas antes da recepção dos animais novos."
            android:textColor="#666" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="A alimentação é balanceada levando em conta a quantidade de ração e os requerimentos nutricionais para cada fase de vida"
            android:textColor="#666" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:text="Confirmar"
            android:textColor="#fff"
            />

    </LinearLayout>
</LinearLayout>