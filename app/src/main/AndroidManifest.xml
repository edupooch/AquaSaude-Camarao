<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.gov.rs.fepagro.aquasaude">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controle.NavigationActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controle.DoencaScrollingActivity"
            android:label="@string/title_activity_doenca_scrolling"
            android:parentActivityName=".controle.NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.gov.rs.fepagro.aquasaude.controle.NavigationActivity" />
        </activity>
        <activity
            android:name=".controle.JogoActivity"
            android:label="@string/title_activity_jogo"
            android:parentActivityName=".controle.NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.gov.rs.fepagro.aquasaude.controle.NavigationActivity" />
        </activity>
        <activity
            android:name=".controle.Jogo2Activity"
            android:label="@string/title_activity_jogo2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controle.ChecklistActivity"
            android:label="@string/title_activity_checklist"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>